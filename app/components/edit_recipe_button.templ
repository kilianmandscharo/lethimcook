package components

import "fmt"

templ editRecipeButton(recipeId uint) {
	<button
		id="edit-recipe-button"
		class="icon-button with-label"
		hx-get={ fmt.Sprintf("/recipe/%d/edit", recipeId) }
		hx-trigger="click"
		hx-target="#content"
		hx-push-url="true"
		title="Rezept bearbeiten"
	>
        Bearbeiten
		<i class="fa-solid fa-pen-to-square"></i>
	</button>
}
